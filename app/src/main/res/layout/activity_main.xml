<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#3A3A5A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieMicIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:lottie_rawRes="@raw/mic_animation"
                app:lottie_loop="true"
                app:lottie_autoPlay="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silencer"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/accent_cyan"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/lottieMicIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Sound-Triggered Silencer"
                android:textSize="14sp"
                android:textColor="@color/text_light"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#3A3A5A"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressDecibel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="0"
                app:indicatorSize="180dp"
                app:trackThickness="16dp"
                app:trackCornerRadius="8dp"
                app:indicatorColor="@color/accent_cyan"
                app:trackColor="#505070"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:max="120" />

            <TextView
                android:id="@+id/tvDecibelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- dB"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/progressDecibel"
                app:layout_constraintBottom_toBottomOf="@id/progressDecibel"
                app:layout_constraintStart_toStartOf="@id/progressDecibel"
                app:layout_constraintEnd_toEndOf="@id/progressDecibel" />

            <TextView
                android:id="@+id/tvCurrentMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:text="Monitoring Paused"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/bg_mode_paused"
                app:layout_constraintTop_toBottomOf="@id/progressDecibel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvDecibelAnalogy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="-- Awaiting audio --"
                android:textColor="@color/text_light"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCurrentMode"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#3A3A5A"
        app:layout_constraintTop_toBottomOf="@id/cardDashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvThresholdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noise Threshold (dB):"
                android:textColor="@color/text_light"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvThresholdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textColor="@color/accent_cyan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/tvThresholdLabel"
                app:layout_constraintBottom_toBottomOf="@id/tvThresholdLabel" />

            <SeekBar
                android:id="@+id/seekThreshold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:max="120"
                android:progress="60"
                android:progressTint="@color/accent_cyan"
                android:thumbTint="@color/accent_cyan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvThresholdLabel" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMonitoring"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Enable Monitoring"
                android:textColor="@color/text_light"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/seekThreshold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TableLayout
                android:id="@+id/tableReference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:stretchColumns="1"
                app:layout_constraintTop_toBottomOf="@id/switchMonitoring"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TableRow android:paddingBottom="8dp">
                    <TextView
                        android:text="Range"
                        android:textStyle="bold"
                        android:textColor="@color/accent_cyan"
                        android:textSize="14sp" />
                    <TextView
                        android:text="Environment Example"
                        android:textStyle="bold"
                        android:textColor="@color/accent_cyan"
                        android:paddingStart="16dp"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow android:paddingBottom="4dp">
                    <TextView
                        android:text="20 - 40 dB"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />
                    <TextView
                        android:text="Whisper / Quiet Library"
                        android:textColor="@color/text_light"
                        android:paddingStart="16dp"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow android:paddingBottom="4dp">
                    <TextView
                        android:text="40 - 60 dB"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />
                    <TextView
                        android:text="Normal Conversation"
                        android:textColor="@color/text_light"
                        android:paddingStart="16dp"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow android:paddingBottom="4dp">
                    <TextView
                        android:text="60 - 80 dB"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />
                    <TextView
                        android:text="Loud Traffic / Alarm"
                        android:textColor="@color/text_light"
                        android:paddingStart="16dp"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="90+ dB"
                        android:textColor="#F44336"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <TextView
                        android:text="Harmful / Industrial"
                        android:textColor="#F44336"
                        android:textStyle="bold"
                        android:paddingStart="16dp"
                        android:textSize="12sp" />
                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>